{
    "comments": {
        "lineComment": ";|//",
    },
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "`",
            "close": "`",
            "notIn": [
                "string",
                "comment"
            ]
        },
    ],
    "folding": {
        "markers": {
            "start": "^\\s*;\\s*area\\b",
            "end": "^\\s*;\\s*endarea\\b"
        }
    },
}